#include <iostream>
#include <vector>
using namespace std;
int n,m;
vector <vector <int> > dp(n, vector<int>(m));

int f(int i, int j)
{

    if (dp[i][j]!=-1)
        return dp[i][j];
    dp[i][j] = f(i-2,j-1)+f(i-1,j-2);

    return dp[i][j];

}
int main()
{

cin >> n >> m;
for (int i=0; i<n; i++){
    for (int j=0; j<m; j++){
        dp[i][j]=-1;
    }
}
dp[0][0]=1;

f(n-1,m-1);

cout << dp[n-1][m-1];
return 0;
}
