#include <iostream>
#include <vector>
#include <algorithm>

using namespace std;

bool cmp (int x, int y)
{
    return x > y;
}
int main()
{
    setlocale(LC_ALL, "Russian");
    int n;
    cout << "введите количество чисел: ";
    cin >> n;
    vector <int> numb(n);

    for (int i = 0; i < n; i++)
        cin >> numb[i];

    sort (numb.begin(), numb.end(), cmp);

    cout << "отсортированные числа в порядке невозрастания:\t";
    for (int i = 0; i < n; i++)
        cout << numb[i] << "\t";

    return 0;
}
